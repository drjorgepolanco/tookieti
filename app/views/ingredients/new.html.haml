- provide(:title, "Crear Ingrediente")

.row
  = render "shared/error_messages", obj: @ingredient
  .large-12.columns
    = render "shared/title", title: "Crear Ingrediente"
    = form_for @ingredient do |f|
      = f.text_field :name, placeholder: "Nombre", class: "radius"
      = f.submit "Crear Ingrediente", class: "button expand radius success"
    %p.right
      = link_to recipes_path do
        %i.fa.fa-arrow-circle-o-left.fa-2x