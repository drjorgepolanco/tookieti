- provide(:title, "Editar Receta")

.row
  = render "shared/error_messages", obj: @recipe
  .large-12.columns
    = render "shared/title", title: "Editar Receta"
    = form_for(@recipe, html: { multipart: true }) do |f|
      = render "fields", f: f
      = f.submit "Guardar cambios", class: "button expand radius"
    %p.right
      = link_to :back do
        %i.fa.fa-arrow-circle-left.fa-2x

:coffeescript
  $(document).ready ->
    $('#recipe_picture').bind 'change', ->
        size_in_megabytes = @files[0].size / 1024 / 1024
        if size_in_megabytes > 5
          alert 'La imagen debe ser menor a 5MB.'
        return
