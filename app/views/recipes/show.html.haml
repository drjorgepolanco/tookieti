- provide(:title, @recipe.title)

.recipe-show
  .row.recipe-picture-container
    = image_tag(@recipe.picture.url, class: "recipe-picture") if @recipe.picture?
  .row
    .large-12.columns
      = render "shared/title", title: @recipe.title
  .row
    .large-3.small-3.columns
      = link_to gravatar(@recipe.user), user_path(@recipe.user)
    .large-6.small-6.columns
      %h3.user
        = link_to full_name(@recipe.user), user_path(@recipe.user)
    .large-3.small-3.columns.like-heart
      = link_to like_recipe_path(@recipe), method: :post do
        %i.fa.fa-heart.fa-3x
        %br/
        = @recipe.total_likes
  %hr/
  .row
    .large-12.medium-12.columns
      %h3.center 
        %i.fa.fa-clock-o.fa-lg
        %span.minutes
          = @recipe.prep_time
        minutos
    .large-12.medium-12.columns
      / = @recipe.cocinas
  %hr/
  %h3.subtitle Descripci√≥n
  = simple_format(@recipe.description)
  %hr/
  .row
    .large-12.medium-12.columns
      %h3.subtitle Ingredientes
      / = @recipe.ingredients
  %hr/
  %p
    %h3.subtitle Instrucciones
    = simple_format(@recipe.steps)
  %hr/
  %p.timestamps
    Creado:
    = time_ago_in_words(@recipe.created_at)
    %br/ 
    Actualizado:
    = time_ago_in_words(@recipe.updated_at)
  - if logged_in? && @recipe.user == current_user
    %p.left
      = link_to edit_recipe_path do
        %i.fa.fa-pencil-square-o.fa-2x
  %p.right
    = link_to recipes_path do
      %i.fa.fa-arrow-circle-o-left.fa-2x
