- provide(:title, "Entrar")

= render "shared/title", title: "Entra a tu cuenta"
= form_for(:session, url: login_path) do |f|

  = f.email_field    :email,    placeholder: "Email",    class: "radius"
  = f.password_field :password, placeholder: "Password", class: "radius"
  = f.label :remember_me, class: "checkbox" do
    = f.check_box :remember_me
    %span Recuérdame |
    %span.forgot_pass
      = link_to "Olvidé mi password", new_password_reset_path

  = f.submit "Entrar", class: "button expand success radius"
%p 
  Nuevo usuario?
  %br/
  = link_to('Regístrate!', signup_path)

