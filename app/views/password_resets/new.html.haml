- provide(:title, "Password olvidado")

.row
  .large-6.medium-6.large-offset-3.medium-offset-3.columns
    %h1.text-center Solicita un nuevo password
    = form_for(:password_reset, url: password_resets_path) do |f|
      = f.email_field :email, placeholder: "Email", class: "radius"
      = f.submit "Enviar", class: "button alert expand radius"
